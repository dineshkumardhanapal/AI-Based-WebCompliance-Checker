# ============================================
# Web Compliance Checker - Environment Variables
# ============================================
# Copy this file to .env and update with your values
# DO NOT commit .env file to version control

# ============================================
# Server Configuration
# ============================================
# Port number for the backend server
PORT=3001

# Environment mode: development or production
# Production mode: hides detailed error messages, stricter CORS
NODE_ENV=development

# ============================================
# API Configuration
# ============================================
# Replicate API Token for AI-powered recommendations
# Get your token from: https://replicate.com/account/api-tokens
# Leave as default to use template-based recommendations
REPLICATE_API_TOKEN=r8_your_replicate_api_token_here

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins for CORS
# For production, add your frontend domain(s)
# Example: https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# Rate Limiting Configuration
# ============================================
# General rate limit: requests per 15 minutes per IP
# Adjust based on your traffic expectations
RATE_LIMIT_MAX=100

# Compliance check endpoint rate limit: requests per hour per IP
# More restrictive to prevent abuse of expensive operations
CHECK_RATE_LIMIT_MAX=20

# ============================================
# Security Configuration (Optional)
# ============================================
# Uncomment and configure if needed:

# Puppeteer timeout in milliseconds (default: 30000 = 30 seconds)
# PUPPETEER_TIMEOUT=30000

# Request body size limit in bytes (default: 1MB)
# BODY_SIZE_LIMIT=1048576

# Enable/disable security headers (default: enabled)
# DISABLE_HELMET=false

# ============================================
# Logging Configuration (Optional)
# ============================================
# Log level: error, warn, info, debug
# LOG_LEVEL=info

# Enable request logging
# ENABLE_REQUEST_LOGGING=true
